.button-area {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: center;
  
}





.button-area view{
  padding: 20rpx;
  font-size: 28rpx;
}

.button-area text{
  padding: 20rpx;
  font-size: 30rpx;
}

.uploader-container {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.uploader-image {
  width: 100%;
  height: 360rpx;
}

